<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link type="text/css" href="../css/normalize.css">
        <link rel="stylesheet" href="../css/mock.css">
        <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">
        <title>Mock Draft</title>
    </head>
    <body>
        <nav>
            <form action="/" id="home">
                <input class="goHome" type="submit" value="" title="Home">
            </form>
            <h1>Mock Draft</h1>
            <div>
                <% if (user) { %>
                    <form method="post" action="/auth/logout" id="logout">
                        <input class='out' type="submit" value="" title="Logout">
                    </form>
                <%} else { %>
                    <form action="/auth/login">
                        <input class='in' type="submit" value="" title="Login">
                    </form>
                <% } %>
            </div>
        </nav>
        <section class="content">
            <div class="carousel-container">
                <% playerArr.forEach((player, index) => {%>
                    <div class="card-container">
                        <div class="card" data-id="<%=player._id%>">
                            <div class="col1">
                                <div class="pImg">
                                    <img src="../img/<%=player.firstName%><%=player.lastName%>.png" alt="">
                                </div>
                                <div class="pInfo">
                                    <div class="pName">
                                        <span><%=player.firstName%></span>
                                        <span><%=player.lastName%></span>
                                    </div>
                                    <div class="pInfo2">
                                        <span><%=player.height%> |</span>
                                        <span><%=player.position%></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col2">
                                <div class="stat">
                                    <span><%=player.PTS%></span>
                                    <span>PTS</span>
                                </div>
                                <div class="stat">
                                    <span><%=player.REB%></span>
                                    <span>REB</span>
                                </div>
                                <div class="stat">
                                    <span><%=player.AST%></span>
                                    <span>AST</span>
                                </div>
                            </div>
                        </div>
                    </div>
                <%})%>
            </div>
            <section class="board">
                <div>
                    <i title="Simulating the lottery will erase your current Mock Draft" class="fa-solid fa-circle-info"></i>
                    <button class="simLottery">Sim Lottery</button>
                </div>
                
                <div class="sortContainer">
                    <div class="sort">
                        <button class="sortBtn sortByName">Name</button>
                        <button class="sortBtn sortByPos">POS</button>
                        <button class="sortBtn sortByPoints">PTS</button>
                        <button class="sortBtn sortByReb">REB</button>
                        <button class="sortBtn sortByAst">AST</button>
                    </div> 
                </div>
                <div class="board-container">
                </div>
            </section>
        </section>
        <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
        <script src="../js/mock.js"></script>
        <% if (user) { %>
            <script>window.onload = getUserBoard()</script>
        <% } %>
        <script src="https://kit.fontawesome.com/41c5cc6e36.js" crossorigin="anonymous"></script>
    </body>
</html>